{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  //TODO:按文件、模块、组件定义对象 变量
  "AppSettings": {
    "MiddlewareExtension": {
      "StaticFileCachePeriod": 11
    },
    "HttpRequstRecordMiddleware": {
      "EnabledRequstRecord": true
    },
    "ServiceCollectionExtension": {
      //请求策略配置
      //注意端口号后不要带/斜杆
      // 注意，http://127.0.0.1:9012 和 http://localhost:9016 是不一样的
      "Cors": {
        "Policy": [
          {
            "Name": "LimitRequests",
            "Origins": "http://127.0.0.1:9016,http://localhost:9016"
          }
        ]
      },
      "SwaggerDoc": [
        {
          "ApiVersion": "1",
          "Title": "云盒",
          "Description": "云盒 RESTful Api"
        }
      ],
      "IdentityJwt": {
        "JwtBearer": {
          "Authority": "http://127.0.0.1:9017",
          "RequireHttpsMetadata": false,
          "Audience": "cloudbox_api_1"
        },
        "PasswordToken": {
          "Address": "http://127.0.0.1:9017",
          "ClientId": "cloudbox_app_resource_password",
          "ClientSecret": "cloudbox",
          "Scope": "cloudbox_api_1.read_write_access"
        }
      },
      "DbConnection": {
        //"ConnectionString": "Server=127.0.0.1;DataBase=webapicommon;Uid=root;Pwd=123456;pooling=true;port=3306;sslmode=none;charset=utf8",
        "ConnectionString": "server=127.0.0.1;database=webapicommon;uid=sa;pwd=123456",
        "MongoDB": {
          //阿里云
          //"ConnectionUrl": "mongodb://39.107.111.128:27017",
          //云盒
          "ConnectionUrl": "mongodb://192.168.12.151:27017",
          "DbName": "warehouse_box"
        }
      },
      "BackgroundTasks": {
        "EnabledDeviceDetectionService": true
      }
    },
    "VerifySignature": {
      "PublicKeyFile": "",
      "ExpirationTime": 20
    },
    "LoggerConfig": {
      "EnableDebug": true,
      "EnableInfo": true
    },
    "DataDayConfig": {
      //粮情数据保留30天
      "GrainCableInfo": 30
    }
  },
  "RestApi": {
    "Users": {
      "Key": "jinhao",
      "Secret": "123456"
    }
  }
}
